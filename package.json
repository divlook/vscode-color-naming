{
	"name": "color-naming",
	"displayName": "Color Naming",
	"description": "A VS Code Extension that names colors using ntc.js",
	"license": "MIT",
	"version": "1.2.1",
	"private": true,
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "divlook",
	"author": {
		"name": "uihyeon.cha"
	},
	"icon": "images/color-naming-symbol.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/divlook/vscode-color-naming.git"
	},
	"bugs": {
		"url": "https://github.com/divlook/vscode-color-naming/issues"
	},
	"homepage": "https://github.com/divlook/vscode-color-naming/blob/main/README.md",
	"activationEvents": [
		"onCommand:color-naming.fromSelectedText"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "ColorNaming",
			"properties": {
				"colorNaming.caseStyle": {
					"type": "string",
					"enum": [
						"Kebab",
						"Camel"
					],
					"default": "Kebab",
					"enumDescriptions": [
						"ex) kebab-case, light-gray-10",
						"ex) camelCase, lightGray_10"
					]
				}
			}
		},
		"commands": [
			{
				"command": "color-naming.fromSelectedText",
				"title": "Color Naming: From selected text"
			}
		]
	},
	"scripts": {
		"clean": "rm -rf ./out",
		"compile": "tsc -p tsconfig.json",
		"lint": "eslint src --ext ts",
		"paths": "tscpaths -p tsconfig.json -s ./src -o ./out",
		"postcompile": "pnpm run paths",
		"precompile": "pnpm run clean",
		"pretest": "pnpm run compile && pnpm run lint",
		"prewatch": "pnpm run clean",
		"vscode:publish": "npx vsce publish",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "pnpm run compile",
		"watch": "tsc-watch -p tsconfig.json --onSuccess 'pnpm run paths'"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/commit-analyzer": "^8.0.1",
		"@semantic-release/git": "^9.0.0",
		"@semantic-release/github": "^7.2.3",
		"@semantic-release/npm": "^7.1.3",
		"@semantic-release/release-notes-generator": "^9.0.3",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "20.12.11",
		"@types/vscode": "^1.89.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"eslint-plugin-prettier": "^3.4.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"prettier": "^2.3.2",
		"semantic-release": "^17.4.4",
		"tsc-watch": "^4.4.0",
		"tscpaths": "^0.0.9",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"change-case": "^4.1.2"
	}
}
